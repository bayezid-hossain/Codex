{
  "manifest_version": 3,
  "name": "LeadEcho",
  "version": "1.0",
  "description": "Monitor and download API requests from app.ocean.io.",
  "permissions": ["webRequest", "storage", "<all_urls>"],
  "host_permissions": [
    "https://67f69c6542d6c71cca62b961.mockapi.io/api/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/leadecho_icon16.png",
      "48": "images/leadecho_icon48.png",
      "128": "images/leadecho_icon128.png"
    }
  },
  "icons": {
    "16": "images/leadecho_icon16.png",
    "48": "images/leadecho_icon48.png",
    "128": "images/leadecho_icon128.png"
  }
}
